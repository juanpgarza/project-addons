    <record id="project_task_form" model="ir.ui.view">
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
            <field name="date_deadline" position="after">
                <field name="fecha_estimada_inicio" />
                <field name="type_id_dias_proxima_etapa"/>                
                <field name="fecha_estimada_proxima_tarea" />                                
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="view_task_tree2">
        <field name="name">project.task.tree</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_tree2" />
        <field eval="2" name="priority" />
        <field name="arch" type="xml">
            <field name="user_ids" position="after">
                <field name="type_id" />
                <field name="type_id_sequence" />
                <field name="planned_date_begin" widget="date" />
                <field name="fecha_estimada_inicio" />
                <field name="type_id_dias_proxima_etapa"/>                
                <field name="fecha_estimada_proxima_tarea" />                                
            </field>
        </field>
    </record> 

</odoo>