<odoo>
    <record id="project_assignment_form" model="ir.ui.view">
        <field name="name">project.assignment.form</field>
        <field name="model">project.assignment</field>
        <field name="inherit_id" ref="project_role.project_assignment_form" />
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <field name="partner_id" />
                <field name="mobile" />
                <field name="email" />                                
            </field>
        </field>
    </record>

    <record id="project_assignment_kanban" model="ir.ui.view">
        <field name="name">project.assignment.kanban</field>
        <field name="model">project.assignment</field>
        <field name="inherit_id" ref="project_role.project_assignment_kanban" />
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <field name="mobile" />
                <field name="email" />
            </field>
            <!-- <xpath expr="//t[@t-esc='record.role_id.value']" position="after">
                <t t-esc="record.mobile.value" />
            </xpath> -->
            <xpath expr="//div[hasclass('col-10')]" position="inside">
                <div>
                    <span>
                        <t t-esc="record.mobile.value" />
                    </span>
                </div>
                <div>
                    <span>
                        <t t-esc="record.email.value" />
                    </span>                    
                </div>
            </xpath>
        </field>
    </record>

</odoo>
